{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb",
        "airbnb/hooks"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "react/prop-types": "off",
        "no-console": "warn",
        "import/first": "error",
        "linebreak-style": ["error", "windows"],
        "react/destructuring-assignment": "off",
        "no-unused-vars": "off"
    }
}
